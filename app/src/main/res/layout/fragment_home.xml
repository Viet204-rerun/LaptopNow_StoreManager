<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_seach"
    tools:context=".ui.TrangChu.HomeFragment">

    <TextView
        android:id="@+id/tv_lt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/tog_quan"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/car_SP"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lt">

        <ImageView
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:src="@drawable/ic_sanpham" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản Phẩm"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_SLSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_HDX"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_KH">

        <ImageView
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:src="@drawable/ic_hoadon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hóa Đơn"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_SLHDX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_HDN"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_SP">

        <ImageView
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:src="@drawable/ic_nhaphang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Hàng"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_SLHDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_KH"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lt">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_khachhang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách Hàng"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_SLKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_DT"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginStart="24dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_SP">

        <ImageView
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:src="@drawable/ic_doanhthu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống Kê Doanh Thu"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_TOP"
        android:layout_width="@dimen/layout_size"
        android:layout_height="@dimen/layout_size"
        android:layout_marginStart="236dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/vienbutton1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_SP">

        <ImageView
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_topsanpham" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Sản Phẩm Bán Chạy"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

