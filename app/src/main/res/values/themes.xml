<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaptopNow" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EEB501</item>
        <item name="colorPrimaryVariant">#E9AD03</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F3C70D</item>
        <item name="colorSecondaryVariant">#440F01</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LaptopNow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LaptopNow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaptopNow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_TV">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="custom_TV_show">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>